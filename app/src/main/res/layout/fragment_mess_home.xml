<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessHome">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BITS Night Canteen Food Ordering System"
        android:textSize="18sp"
        android:padding="15dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/Ins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="@string/mess_home"
        android:textColor="#000"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/Sel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select mess to begin :"
        android:layout_below="@id/Ins"
        android:textSize="18sp"
        android:padding="20dp"/>

    <Spinner
        android:id="@+id/Mess_spinner"
        android:layout_below="@id/Sel"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content">

    </Spinner>

    <Button
        android:id="@+id/Gobtn"
        android:layout_margin="20dp"
        android:layout_below="@id/Mess_spinner"
        android:layout_width="match_parent"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:text="Proceed to mess menu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signout"
        android:layout_alignParentBottom="true"
        android:text="Sign out"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />

</RelativeLayout>